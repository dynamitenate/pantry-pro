{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "type": "shell",
            "command": "cd web && cd src && npm run watch:debug",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "__________"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Project is running at",
                    "endsPattern": "Compiled successfully\\."
                }
            }
        },
        {
            "label": "Kill",
            "type": "process",
            "command": "${input:terminateAll}"
        },
    ],
    "inputs": [
        {
            "id": "terminateAll",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}