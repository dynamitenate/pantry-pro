{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Client",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}/web/src",
            "preLaunchTask": "Watch",
            "postDebugTask": "Kill",
            "sourceMapPathOverrides":{
                "webpack:///./src/*": "${webRoot}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/server.js"
        }
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": ["Server", "Client"]
        }
    ]
}